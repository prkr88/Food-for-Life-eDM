doctype html
html(lang='en')
	head
		meta(charset="UTF-8")
		meta(http-equiv="Content-Type", content="text/html")
		meta(name="viewport", content="width=device-width, initial-scale=1")
		//- styles from here will be moved inline
		link(type='text/css', rel='stylesheet', href='/css/stylesheet.css')
		title Food for Life
	
	body(bgcolor="#fff")
		<!--[if gte mso 9]>
		<v:background xmlns:v="urn:schemas-microsoft-com:vml" fill="t">
		<v:fill type="tile" src="http://i.imgur.com/OUUxZCe.jpg" color="#f8f8f8"/>
		</v:background>
		<![endif]-->

		//- include @imports as inline-styles
		include import-styles.jade

		//-Body wrapper for full width backgrounds
		table(cellpadding="0", cellspacing="0", width="100%", height="100%", bgcolor="#f8f8f8", background="http://i.imgur.com/OUUxZCe.jpg").background 
			tr
				//- Content wrapper
				td(id="content-container", valign="top")
					table(cellpadding="0", cellspacing="0", width="100%", align="center").content
						//- Row 1
						tr
							td.content-td
								//- Logo container
								table(id="header-container")
									tr
										td.header
											include header.jade
						tr
							td.content-td
								//- Hero container
								table(id="hero-container")
									tr
										td.hero
											include hero.jade

						tr
							td.content-td
								//- Banner container
								table(id="banner-container")
									tr
										td.banner
											include banner.jade
		table(cellpadding="0", cellspacing="0", width="100%", align="center").spacer
			tr
				td
					p Spacer
