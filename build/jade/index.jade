doctype html
html(lang='en')
	head
		meta(charset="UTF-8")
		meta(http-equiv="Content-Type", content="text/html")
		//- meta(name="viewport", content="initial-scale=1")
		//- styles from here will be moved inline
		link(type='text/css', rel='stylesheet', href='/css/stylesheet.css')
		title You will ♥ Dawn Yang’s low-fat yoghurt pops
	
	body(bgcolor="#fff")

		//Include a message with the eDM as a flag
		//- include flag.jade
		
		<!--[if gte mso 9]>
		v:background(xmlns:v = 'urn:schemas-microsoft-com:vml', fill='t')
			v:fill(color= '#f2f2f2')
		<![endif]-->

		//- include any @imports as inline-styles
		include import-styles.jade
		include datasheet.jade

		//- hidden email preview description
		.description
			p(style={'color':'#fff', 'font-size': '0px', 'line-height': '0'})= emailPreview
				
		table(align="center")
			tr
				td
					include browser.jade
		//-Body wrapper for full width backgrounds
		table(cellpadding="0", cellspacing="0", width="100%", height="100%" bgcolor="#f2f2f2", align="center", id="background")

			tr
				//- Content wrapper
				td(id="content-container", valign="top")
					table(cellpadding="0", cellspacing="0", width="600", align="center").content
						//- row 1
						tr
							td.content-td(align="center")
								//- Logo container
								span &nbsp;
								table(id="header-container", bgcolor="#fff", width="600", cellpadding="0", cellspacing="0")
									tr
										td.header
											include header.jade
						tr
							td.content-td(align="center")
								//- Hero container
								span &nbsp;
								table(id="hero-container", width="600", cellpadding="0", cellspacing="0")
									tr
										td.hero
											include hero.jade
						tr
							td
								span &nbsp;
	
		table(cellpadding="0", cellspacing="0", width="100%", height="100%", align="center")
			tr
				//- content wrapper
				td(id="details-container", valign="top")
					table(cellpadding="0", cellspacing="0", width="600", align="center").details
						tr
							td.content-td(align="center")
								span &nbsp;
								table(id="banner-container" cellpadding="0", cellspacing="0" width="600")
									tr
										td
											include banner.jade
						tr
							td.content-td(align="center")
								span &nbsp;
								table(width="600")
									tr
										td
											include video_thumb.jade
						tr
							td
								span &nbsp;
								table(cellpadding="0", cellspacing="0", width="100%", height="100%", align="center")
												tr
													td
														include footer.jade









